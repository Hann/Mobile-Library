{+include("header.html")+}

<style>
/* 개별 Sample 관련 CSS */
.fta-textarea {
	width:90%;	
	padding: 3px 5px;	
	font-size: 13px;
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -webkit-focus-ring-color:  rgba(0, 0, 0, 0);	
	-webkit-appearance: none;	
	border: 1px solid #b3b3b3;
    color: #333;
    text-shadow:0 1px 0 #fff;
    background: #f0f0f0;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#eee), to(#fff));
    background-image: -webkit-linear-gradient(top, #eee, #fff);
    background-image: -moz-linear-gradient(top, #eee, #fff);
    background-image: -ms-linear-gradient(top, #eee, #fff);
    background-image: -o-linear-gradient(top, #eee, #fff);
    background-image: linear-gradient(top, #eee, #fff);
}

.fta-textarea:focus {outline:none;}

.fta-textarea-focus {background: #f0f0f0 !important;-moz-box-shadow: 0 0 8px #387bbe !important;-webkit-box-shadow:0 0 8px #387bbe !important;box-shadow: 0 0 8px #387bbe !important;}
.fta-textarea-disable {background: #eee !important;}
</style>

<!-- Content -->
<div id="ct" class="content">
    <h2 class="h_lft">{=COMPONENT}</h2>
    
    <!-- ViewSource -->
    <div id="view_source" class="view_source">
    	<div class="_view_status vs"><a href="#">view source</a><span class="ic_vc"></span></div>
	    <div class="sc">
	        <div class="_view_code sc_info" style="display:none;">
	       		<div>
					<h2 class="h2_code">CSS</h2>
					<!-- 마크업 구조 -->
					<textarea class="brush: css;">{=CSS}</textarea>	
				</div>
				<div>
					<h2 class="h2_code">HTML</h2>
					<textarea class="brush: xml;">{=HTML}</textarea>
				</div>
				<div>
					<h2 class="h2_code">SCRIPT</h2>
					<textarea class="brush: javascript;">{=SCRIPT}</textarea>
				</div>
	        </div>
	    </div>
    </div>
	<!--// ViewSource -->

	<!-- Demo 영역 -->
	<div id="demo">
		<div class="lm">
			<!-- 샘플설명은 이 영역에 작성하세요. -->
			<textarea id="textarea" class="fta-textarea"></textarea>
		</div>
	</div>
	<!--// Demo 영역 -->
	
	<!-- Option 영역 -->
	<div id="option">
		<div class="op">
			<!-- 옵션은 이 영역에 작성하세요. -->
			<button type="button" id="chkEnable" class="btn">활성화</button>
			<button type="button" id="chkDisable" class="btn">비활성화</button><br>
			Textarea height 증가 크기<input type="text" id="expandHeight" class="op_w50" value="">(px)<br>
			Textarea 최대 height 크기 (-1 일경우 Max Height 가 설정 되지 않음.)<input type="text" id="maxHeight" class="op_w50" value="">(px)&nbsp;&nbsp;<button type="button" id="apply" class="btn">적용</button>			
	    </div>
	</div>
	<!--// Option 영역 -->
</div>
<!--// Content -->

<!-- ViewSource Template 영역 -->
<div style="display:none;">
	<textarea>
	/*includeCSS*/	
	.[prefix]textarea-focus {...}
	.[prefix]textarea-disable {...}
	/*includeCSSEnd*/		
	
	<!--includeHtml -->
	<textarea id="textarea" class="fta-textarea"></textarea>
	<!--includeHtmlEnd -->
	
	
	/*includeScript*/
	var oTextArea = new jindo.m.TextArea("textarea",{bUseRadius : true});	
	/*includeScriptEnd*/
	</textarea>
</div>
<!--// ViewSource Template 영역끝 -->

<!-- 사용자 script 파일 시작 -->
<script src="../../../source/jindo.m.TextArea.js" charset="utf-8"></script>
<!-- 사용자 script 파일 끝 -->

<!-- Sample 실행 script 코드 -->
<script type="text/javascript">
	var oTextArea = new jindo.m.TextArea("textarea",{bUseRadius : true});
	
	jindo.$("expandHeight").value = oTextArea.getExpandHeight();
	jindo.$("maxHeight").value = oTextArea.getMaxHeight();
	
	jindo.$Fn(function(){
		oTextArea.enable();
	},this).attach(jindo.$("chkEnable"), "click");
	
	jindo.$Fn(function(){
		oTextArea.disable();
	},this).attach(jindo.$("chkDisable"), "click");
	
	jindo.$Fn(function(){		
		oTextArea.setExpandHeight(Number(jindo.$("expandHeight").value));
		oTextArea.setMaxHeight(Number(jindo.$("maxHeight").value));
	},this).attach(jindo.$("apply"), "click");
</script>
<!--// Sample 실행 script 코드 끝-->

{+include("footer.html")+}

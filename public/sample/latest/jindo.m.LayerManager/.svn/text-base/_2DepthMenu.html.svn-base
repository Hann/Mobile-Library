<style>
/* 개별 Sample 관련 CSS */
.u_h2{position:relative;width:100%;height:33px;border-bottom:1px solid #b0b0b0;background:#f4f5f5;text-align:left}
.u_h2_h{overflow:hidden;height:33px;padding:0px 0px 0px 50px;font-size:15px;line-height:33px}
.u_h2 .uc_pl,.u_h2 .uc_pr{position:absolute;top:3px;letter-spacing:-1px}
.u_h2 .uc_pl{left:5px}
.u_h2 .uc_pr{right:5px}
.u_h2 .u_btn{display:inline-block;padding:.36em .4em;border:1px solid #bcbcbc;background:#f1f1f1;background:-webkit-gradient(linear,0 0,0 100%,from(#fff),color-stop(.05,#fbfbfb),to(#f1f1f1));font-size:1em;color:#666;letter-spacing:-1px;white-space:nowrap}
.u_h2 .u_btn .uc_ico_ck{display:inline-block;margin-left:-.15em;padding-left:1.4em;background:url(../im/ico.gif) no-repeat 0 3px}
.u_h2 .u_btn_v2{padding:.36em .8em .43em .8em;}
.s2 .u_h2 .u_btn_v2:before,.s2 .u_h2 .u_btn_v2:after{display:inline-block;content:''}
.s2 .u_h2 .u_btn_v2:before{margin-left:-3px}
.s2 .u_h2 .u_btn_v2:after{margin-right:-3px}

.u_lst_l{border:1px solid #dfdfdf; margin: 1px 0px 1px 5px}
.u_lst_lk{display:block;padding:.7em 31px .6em 10px;background:url(../im/bu_lk.gif) no-repeat 100% 50%}
.u_lst_lk_no{display:block;padding:.7em 31px .6em 10px;}


.u_h3{position:relative;width:100%;height:35px;text-align:left}
.u_h3 .uc_pl{position:absolute;top:3px;left:5px;text-align:center}
.u_h3 .uc_prev{display:inline-block;width:30px;height:25px;padding-left:5px;border:1px solid #242937;border-radius:2px;background:#2a3650 ;font-size:13px;color:#fff;letter-spacing:-1px;line-height:25px;text-align:left;white-space:nowrap;-webkit-box-shadow:inset #8ca1da 0 0 1px,#181e2e 0 1px 1px}
</style>
<!-- Content -->
<div id="ct" class="content">
    <h2 class="h_lft">{=COMPONENT}</h2>
    
    <!-- ViewSource -->
    <div id="view_source" class="view_source">
    	<div class="_view_status vs"><a href="#">view source</a><span class="ic_vc"></span></div>
	    <div class="sc">
	        <div class="_view_code sc_info" style="display:none;">
	       		<div>
					<h2 class="h2_code">CSS</h2>
					<!-- 마크업 구조 -->
					<textarea class="brush: css;">{=CSS}</textarea>	
				</div>
				<div>
					<h2 class="h2_code">HTML</h2>
					<textarea class="brush: xml;">{=HTML}</textarea>
				</div>
				<div>
					<h2 class="h2_code">SCRIPT</h2>
					<textarea class="brush: javascript;">{=SCRIPT}</textarea>
				</div>
	        </div>
	    </div>
    </div>
	<!--// ViewSource -->

	<!-- Demo 영역 -->
	<div id="demo">
		<div class="lm" style="height:180px">
			<div class="u_h3">
				<div class="u_h2_h"><span id="showContent" style="width:100px;">LayerManager로 메뉴만들기</span></div>
				<div class="uc_pl"><a href="javascript:void(0);" class="uc_prev" id="btnMenu" >메뉴</a></div>
			</div>
			
			<div id='menuLayer' style="position:absolute; width:160px">
				<ul id='menuList' style="display:none" class="u_lst">
					<li class="u_lst_l"><a href="javascript:void(0);" class="u_lst_lk">Microsoft Office</a></li>
					<li class="u_lst_l"><a href="javascript:void(0);" class="u_lst_lk_no">네이버N드라이브</a></li>
					<li class="u_lst_l"><a href="javascript:void(0);" class="u_lst_lk_no">네이버톡</a></li>
					<li class="u_lst_l"><a href="javascript:void(0);" class="u_lst_lk_no">네이버</a></li>
				</ul>	
			</div>
			
			<div id='subMenuLayer' style="position:absolute; left:160px; width:130px">
				<ul id='subMenuList' style="display:none" class="u_lst">
					<li class="u_lst_l"><a href="javascript:void(0);" class="u_lst_lk_no">Excel</a></li>
					<li class="u_lst_l"><a href="javascript:void(0);" class="u_lst_lk_no">Word</a></li>
					<li class="u_lst_l"><a href="javascript:void(0);" class="u_lst_lk_no">PowerPointer</a></li>
				</ul>	
			</div>
		</div>
	</div>
	<!--// Demo 영역 -->
</div>
<!--// Content -->

<!-- ViewSource Template 영역 -->
<div style="display:none;">
	<textarea>
	/*includeCSS*/	
	/*includeCSSEnd*/	
	
	<!--includeHtml -->
	<!--includeHtmlEnd -->
	/*includeScript*/
	var fnBtnMenu = jindo.$Fn(function() {
		if(oLmMenu.getVisible()) {
			oLmMenu.hide();	
			oLmSubMenu.hide();
		} else {
			oLmMenu.show();
		}
	}, this).attach(jindo.$("btnMenu"), "click");
	var welData = jindo.$Element("showContent");
	
	var oLmMenu = new jindo.m.LayerManager("menuList").link("btnMenu")
		.attach("ignore", function(we) {
			if(we.elTarget) {
				var welTarget = jindo.$Element(we.elTarget);
				if(welTarget.hasClass("u_lst_lk")) {
					oLmSubMenu.show();	
				}
			}
		})
		.attach("hide",function(we) {
			if (we.elTarget) {
				// TextNode 선택시 상위 엘리먼트로 이벤트 전달
				we.elTarget = we.elTarget.nodeType == 3 ? we.elTarget.parentNode : we.elTarget;
			}
			var welTarget = jindo.$Element(we.elTarget);
			if(we.elTarget && welTarget.className().indexOf("u_lst_lk") > -1) {
				welData.html(we.elTarget.innerHTML + "이(가) 선택됨");
			}			
		}).link(jindo.$$.getSingle(".u_lst_lk"));
	var oLmSubMenu = new jindo.m.LayerManager("subMenuList").link(jindo.$$.getSingle(".u_lst_lk"),"btnMenu");
	/*includeScriptEnd*/
	</textarea>
</div>
<!--// ViewSource Template 영역끝 -->


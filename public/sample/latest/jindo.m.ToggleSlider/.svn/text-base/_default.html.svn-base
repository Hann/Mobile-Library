<!-- 사용자 script 파일 시작 -->
<script src="../../../source/jindo.m.Touch.js" charset="utf-8"></script>
<script src="../../../source/jindo.m.ToggleSlider.js" charset="utf-8"></script>
<!-- 사용자 script 파일 끝 -->

<!-- Sample 실행 script 코드 -->
<script type="text/javascript">
var el = jindo.$('toggleSlider1');

var oToggleSlider = new jindo.m.ToggleSlider(el,{bStatus: false}).attach({
	'beforeChange' : function(oCustomEvt){		
		addConsole('[before]  →  '+(oCustomEvt.bOn? 'on' : 'off') );
	},
	'change' : function(oCustomEvt){
		addConsole('[change]  →  ' +(oCustomEvt.bOn? 'on' : 'off') );
	}
});

/* toggle 버튼 클릭 처리 */
jindo.$Fn(function(evt){
	evt.stop();
	oToggleSlider.toggle();
	
},this).attach(jindo.$('btntoggle'),'click');

/* on 버튼 클릭 처리 */
jindo.$Fn(function(evt){
	evt.stop();
	oToggleSlider.on();
},this).attach(jindo.$('btnon'),'click');

/* off 버튼 클릭 처리 */
jindo.$Fn(function(evt){
	evt.stop();
	oToggleSlider.off();
},this).attach(jindo.$('btnoff'),'click');
</script>
<!--// Sample 실행 script 코드 끝-->


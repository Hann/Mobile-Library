<style>
.tslider-wrapper{position:relative;margin:0;padding:10px 0 0}
.tslider-track{overflow:hidden;position:absolute;top:0;width:100%;height:40px;border-radius:1em;background:#ccc}
.tslider-track .tslider-thumb{position:absolute;z-index:1;width:50%;height:40px;border-radius:1em;background:#85bae4;cursor:pointer}
.tslider-track .tslider_aron{display:block;position:absolute;top:0;left:0;width:50%;height:30px;padding:10px 0 0;font-family:Helvetica,Arial,sans-serif;font-size:1.5em;color:#fff;text-align:center;cursor:pointer}
.tslider-track .tslider_aroff{display:block;position:absolute;top:0;left:50%;width:50%;height:30px;padding:10px 0 0;font-family:Helvetica,Arial,sans-serif;font-size:1.5em;color:#fff;text-align:center;cursor:pointer}

.u_bttgl_b .u_bg_on{background:#0C3}
.u_bttgl_b .u_bg_off{background:#ccc}
</style>


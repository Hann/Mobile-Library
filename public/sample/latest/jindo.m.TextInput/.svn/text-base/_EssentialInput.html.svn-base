<script src="../../../source/jindo.m.TextInput.js" charset="utf-8"></script>
<script src="../../../source/jindo.m.Validation.js"></script>
<script src="../../../source/validator/jindo.m.Validator.js"></script>
<script src="../../../source/validator/jindo.m.RequireValidator.js"></script>
<!-- 사용자 script 파일 끝 -->

<!-- Sample 실행 script 코드 -->
<script type="text/javascript">
var aResultDiv = jindo.$$(".result", jindo.$("form_base"));
var oTextInput = new jindo.m.TextInput("form_base", {
	bUseValidate : true
});
oTextInput.attach({
	"valid" : function(we) {
		var welDiv = jindo.$Element(aResultDiv[we.nIndex]);
		welDiv.html("유효합니다.").removeClass("invalid").addClass("valid");
	},
	"invalid" : function(we) {
		var welDiv = jindo.$Element(aResultDiv[we.nIndex]);
		welDiv.html("유효하지 않습니다.").removeClass("valid").addClass("invalid");
	}
});

function getElement(nIndex) {
	return oTextInput.getElement(nIndex);
}
</script>
<!--// Sample 실행 script 코드 끝-->


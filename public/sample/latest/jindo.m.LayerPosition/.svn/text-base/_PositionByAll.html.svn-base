{+include("header.html")+}

<style>
/* 개별 Sample 관련 CSS */
.u_dsc{
	display: block;
	width:300px;border:2px solid green; 
	padding:10px 10px 10px;
	background-color: green;
	font-size:1em; opacity : 0.3;
	text-align:center}
.u_dsc .uc_h{font-size:1em}
.u_dsc .uc_st{font-weight:bold;color:#32a800}
.u_dsc .uc_wn{white-space:nowrap}
.u_dsc .uc_p{vertical-align: middle; text-align: center;margin-top:0.5em;color:white;font-weight:bold;}
.u_dsc .uc_area{margin-top:1.25em}
.u_dsc .u_btn{display:inline-block;padding:.36em .8em;border:1px solid #bcbcbc;background:#f1f1f1;background:-webkit-gradient(linear,0 0,0 100%,from(#fff),color-stop(.05,#fbfbfb),to(#f1f1f1));font-size:.93em;color:#666;letter-spacing:-1px;white-space:nowrap}
</style>

<!-- Content -->
<div id="ct" class="content">
    <h2 class="h_lft">{=COMPONENT}</h2>
    
    <!-- ViewSource -->
    <div id="view_source" class="view_source">
    	<div class="_view_status vs"><a href="#">view source</a><span class="ic_vc"></span></div>
	    <div class="sc">
	        <div class="_view_code sc_info" style="display:none;">
	       		<div>
					<h2 class="h2_code">CSS</h2>
					<!-- 마크업 구조 -->
					<textarea class="brush: css;">{=CSS}</textarea>	
				</div>
				<div>
					<h2 class="h2_code">HTML</h2>
					<textarea class="brush: xml;">{=HTML}</textarea>
				</div>
				<div>
					<h2 class="h2_code">SCRIPT</h2>
					<textarea class="brush: javascript;">{=SCRIPT}</textarea>
				</div>
	        </div>
	    </div>
    </div>
	<!--// ViewSource -->

	<!-- Demo 영역 -->
	<div id="demo">
		<div class="u_dsc" id="layer" >
		 	<p class="uc_p">LayerPosition은 all 영역을 지정함으로써 화면 전체와 동일한 크기의 Layer를 지정할 수 있습니다.<br/><br/>
			<a href="#" class="u_btn" id="btn_prev">이전으로</a>
			</p>
		</div>
	</div>
	<!--// Demo 영역 -->
	
	<!-- Option 영역 -->
	<div id="option">
		<div class="op">
			<!-- 옵션은 이 영역에 작성하세요. -->
			<button type="button" id="btn_all" class="btn">전체화면에 맞게 변경</button>
	    </div>
	</div>
	<!--// Option 영역 -->
</div>
<!--// Content -->

<!-- ViewSource Template 영역 -->
<div style="display:none;">
	<textarea>
	/*includeCSS*/	
	/*includeCSSEnd*/	
	
	
	<!--includeHtml -->
    <div id="layer">Layer</div>
	<!--includeHtmlEnd -->
	
	
	/*includeScript*/
	var oLp = new jindo.m.LayerPosition("layer", {
		sPosition : "all"
	});
	/*includeScriptEnd*/
	</textarea>
</div>
<!--// ViewSource Template 영역끝 -->

<!-- 사용자 script 파일 시작 -->
<script src="../../../source/jindo.m.LayerPosition.js" charset="utf-8"></script>
<!-- 사용자 script 파일 끝 -->

<!-- Sample 실행 script 코드 -->
<script type="text/javascript">
	jindo.$Fn(function(we){
		we.stop();
		oLp.all();
	}, this).attach(jindo.$("btn_all"), 'click');

	jindo.$Fn(function(we){
		we.stop();
		history.back();
	}, this).attach(jindo.$("btn_prev"), 'click');
	
	var oLp = new jindo.m.LayerPosition("layer", {
		sPosition : "bottom"
	}).attach("adjust", function(we) {
		we.elLayer.style.display = "block";
	});
</script>
<!--// Sample 실행 script 코드 끝-->


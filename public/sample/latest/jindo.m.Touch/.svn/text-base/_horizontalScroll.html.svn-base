<script src="../../../source/jindo.m.Touch.js" charset="uft-8"></script>
<!-- 사용자 script 파일 끝 -->

<!-- Sample 실행 script 코드 -->
<script type="text/javascript">
var elBody = document.body;
//scroll을 막기 위한 코드 추가
var sEvtName = 'touchmove';
var htInfo = jindo.m.getDeviceInfo();
//andriod 2.1 bug fix
if(htInfo.android && htInfo.version == '2.1'){
	sEvtName = 'touchstart';
}

jindo.$Fn(function(evt){
	evt.$value().preventDefault();
},this).attach(jindo.$('layer1'),sEvtName);
//scroll을 막기 위한 코드 추가 끝

var oTouch = new jindo.m.Touch('layer1');			
oTouch.attach({		
	'hScroll' : function(oCustomEvt){
		var aTemp = [];
		aTemp.push('hScroll →');
		if (oCustomEvt.nDistanceX > 0) {
			aTemp.push('오른쪽으로')
		}
		else {
			aTemp.push('왼쪽으로')
		}
		aTemp.push(Math.abs(oCustomEvt.nDistanceX)+"px 이동");
					
		aTemp.push('마지막 터치의 좌표  X:'+oCustomEvt.nX+", Y:"+oCustomEvt.nY);
		
		if(oCustomEvt.nMomentumX > 0){
			aTemp.push('[가속발생! 속도 :'+oCustomEvt.nSpeedX +" ,운동에너지:"+oCustomEvt.nMomentumX+"]");
		}
		
		addConsole(aTemp.join(" "));
	},
	'touchMove' : function(oCustomEvt){
		if(typeof (oCustomEvt.sMoveType) == 'undefined' ||oCustomEvt.sMoveType != 'hScroll'){
			oCustomEvt.oEvent.stop(jindo.$Event.CANCLE_DEFAULT);
		}
	}

});

var fMoveHandler = function(oCustomEvt){
	if (oCustomEvt.sMoveType == jindo.m.MOVETYPE[0]){
		addConsole('touchmove → 현재 좌표 X:' + oCustomEvt.nX + ", Y:" + oCustomEvt.nY);
	}
}

//apply button	
function apply(){
	oTouch.option('nSlopeThreshold', jindo.$('nDis').value);
	oTouch.option('nMomentumDuration', jindo.$('nTime').value);
	oTouch.option('nMoveThreshold', jindo.$('nMove').value);
	
	var elCheck = jindo.$('moveEvent');
	
	if(elCheck.checked){
		if (typeof oTouch._htEventHandler['touchMove'] == 'undefined' || (oTouch._htEventHandler['touchMove'].length == 1)) {
			oTouch.attach('touchMove', fMoveHandler);
		}else{
			oTouch.detach('touchMove', fMoveHandler);
			oTouch.attach('touchMove', fMoveHandler);
		}				
	}else{
		if(typeof oTouch._htEventHandler['touchMove'] != 'undefined' && (oTouch._htEventHandler['touchMove'].length > 1)) {
			oTouch.detach('touchMove', fMoveHandler);
		}
	}
	addConsole('적용되었습니다');		
}		

jindo.$Fn(function(evt){
	evt.stop();
	apply();
}, this).attach(jindo.$('apply'),'click');
</script>
<!--// Sample 실행 script 코드 끝-->


<!-- 사용자 script 파일 시작 -->
<script src="../../../source/jindo.m.Transition.js" charset="utf-8"></script>
<script src="../../../source/effect/jindo.m.Effect.js" charset="utf-8"></script>
<script src="../../../source/effect/jindo.m.ContractEffect.js" charset="utf-8"></script>
<script src="../../../source/jindo.m.LayerEffect.js" charset="utf-8"></script>
<!-- 사용자 script 파일 끝 -->

<!-- Sample 실행 script 코드 -->
<script type="text/javascript">
var welContents = jindo.$Element('ct');
var welDemo = jindo.$Element('demo');
var welLayer = jindo.$Element('layer1');
var welNotice = jindo.$Element('notice');

var nInitH = welDemo.height();
var nInitW = welDemo.width();
var nMinLayerH = 250;	

//화면리사이즈 처리
function setSize(){
	welDemo.height(nInitH);
	
	var nCurrentH = welContents.height();
	var nScreenH =  jindo.$Document().clientSize().height;
	
	
	if(nCurrentH > nScreenH){ //스크롤이 생겼을 경우
		var nNewH = nCurrentH - nScreenH;
		nNewH = nInitH - nNewH;
		nNewH = Math.max(nMinLayerH, nNewH);
	}else{ //화면이 클경우
		var nNewH = nScreenH - nCurrentH + nInitH -50;		
	}
	
	welDemo.height(nNewH);
	if(welLayer.width() != 0){
		welLayer.height(nNewH-20);
		//boder 1px 
		welLayer.width(welDemo.width()-2);	
	}	
	welNotice.height(nNewH-40);	
	
}
setSize();

//화면 로테이션 및 리사이즈 처리
jindo.m.bindRotate(jindo.$Fn(this.setSize, this).bind());
	
// 이펙트 초기화	
var oEffect = new jindo.m.LayerEffect(welLayer.$value());
	
oEffect.attach({
		'beforeEffect' : function(oCustomEvt){ 
			addConsole('before → '+ oCustomEvt.sEffect +' 발생전');
			jindo.$('notice').style.display = "none";
		},		
		'afterEffect' : function(oCustomEvt){
			addConsole('end → '+ oCustomEvt.sEffect +' 완료');
			jindo.$('notice').style.display = "block";
			welLayer.height(0);
		}	
});

var wfContractLeft = jindo.$Fn(function(evt){
		if(typeof evt !== 'undefined'){
			evt.stop();
		}
		if(oEffect.isPlaying()){
			alert('현재 축소중이예요!!');			
			return;
		}
		
		//화면 리사이즈에 따른 레이어 width가 변했을 경우에 대한 코드 처리
		if(welLayer.width() == 0){
			jindo.$('notice').style.display = "none";
			welLayer.height(welDemo.height()-20);
			//boder 1px 
			welLayer.width(welDemo.width()-2);	
			oEffect.setSize();
		}		
		
		var htOption={sDirection:'left'};
		
		var nTime = jindo.$('nDuration').value;
		if(nTime.length > 1){
			htOption.nDuration = nTime*1;	
		}
		
		oEffect.contract(htOption);
},this);

	wfContractLeft.attach(jindo.$('contract'), 'click');
	window.onload = function(){	
		setTimeout(function(){		
			wfContractLeft.$value()();
		},500);
	}
	//wfContractLeft.attach(window, 'load');
</script>
<!--// Sample 실행 script 코드 끝-->


<!-- Sample 실행 script 코드 -->
<script type="text/javascript">
var oDialog = new jindo.m.Dialog();
var aTemplate = [];
aTemplate.push('<div class="u_dsc {=class1}" style="background-color:white;border:2px solid #777777;">');
aTemplate.push('<h2 class="uc_h"><strong class="{=class2}">{=type}</strong> Dialog입니다.</h2>');
aTemplate.push('<div class="uc_area">');
aTemplate.push('<a href="#" class="u_btn dialog-confirm" onClick="return false;">확인</a> ');
aTemplate.push('</div>');
aTemplate.push('</div>');
var sTemplate = aTemplate.join("");
oDialog.setTemplate(sTemplate);

function show(sType) {
	var htTemplate;
	if(sType == 1) {
		htTemplate = {
			class1 : "u_dsc",
			class2 : "uc_st",
			type : "일반형"
		};
	} else if(sType == 2) {
		htTemplate = {
			class1 : "u_dsc_q",
			class2 : "uc_st_q",
			type : "질문형"
		};
	} else if(sType == 3) {
		htTemplate = {
			class1 : "u_dsc_n",
			class2 : "uc_st_n",
			type : "경고형"
		};
	}
	
	oDialog.show(htTemplate);
}
</script>
<!--// Sample 실행 script 코드 끝-->


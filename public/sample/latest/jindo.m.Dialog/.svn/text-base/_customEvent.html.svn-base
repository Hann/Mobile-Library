{+include("header.html")+}

<style>
/* 개별 Sample 관련 CSS */
.u_dsc{padding:50px 10px 20px;background:url(../im/ico_dsc.gif) no-repeat 50% 1.43em;font-size:.85em;text-align:center}
.u_dsc h2{border:0px;background:none;color:#000;font-size:0.93em;}
.u_dsc_q{background-image:url(../im/ico_dsc_q.gif)}
.u_dsc_n{background-image:url(../im/ico_dsc_n.gif)}
.u_dsc .uc_h{font-size:1em}
.u_dsc .uc_st{font-weight:bold;color:#3AA6B5}
.u_dsc .uc_st_q{font-weight:bold;color:#32a800}
.u_dsc .uc_st_n{font-weight:bold;color:#FF6347}
.u_dsc .uc_wn{white-space:nowrap}
.u_dsc .uc_p{margin-top:0.5em;color:#909090}
.u_dsc .uc_area{margin-top:1.25em}
.u_dsc .u_btn{display:inline-block;padding:.36em .8em;border:1px solid #bcbcbc;background:#f1f1f1;background:-webkit-gradient(linear,0 0,0 100%,from(#fff),color-stop(.05,#fbfbfb),to(#f1f1f1));font-size:.93em;color:#666;letter-spacing:-1px;white-space:nowrap}
.u_dsc .u_btn .uc_ico_ck{display:inline-block;margin-left:-.15em;padding-left:1.4em;background:url(../im/ico.gif) no-repeat 0 3px}
.guioHeaderClose {position:absolute;right:10px;top:10px;width:28px;height:28px;border:0;background:none;cursor:pointer;}
</style>

<!-- Content -->
<div id="ct" class="content">
    <h2 class="h_lft">{=COMPONENT}</h2>
    
    <!-- ViewSource -->
    <div id="view_source" class="view_source">
    	<div class="_view_status vs"><a href="#">view source</a><span class="ic_vc"></span></div>
	    <div class="sc">
	        <div class="_view_code sc_info" style="display:none;">
	       		<div>
					<h2 class="h2_code">CSS</h2>
					<!-- 마크업 구조 -->
					<textarea class="brush: css;">{=CSS}</textarea>	
				</div>
				<div>
					<h2 class="h2_code">HTML</h2>
					<textarea class="brush: xml;">{=HTML}</textarea>
				</div>
				<div>
					<h2 class="h2_code">SCRIPT</h2>
					<textarea class="brush: javascript;">{=SCRIPT}</textarea>
				</div>
	        </div>
	    </div>
    </div>
	<!--// ViewSource -->

	<!-- Demo 영역 -->
	<div id="demo">
		<div class="lm">
			customEvent 이벤트 사용하기
		</div>
	</div>
	<!--// Demo 영역 -->
	
	<!-- Option 영역 -->
	<div id="option">
		<div class="op">
			<button type="button" id="fadeln" class="btn" onclick="oDialog.show();return false;">Open Dialog</button>
			<p style="padding:5px 0px 0px;">Dialog.attach({ <span class="keyword">beforeShow</span> : function() {...}, ...생략... });</p>
			<p class="dot">인스턴스에 customEvent를 attach하여 사용<br/>- 인스턴스가 Release될 때까지 이벤트가 유지됨</p>	
			<p style="padding:5px 0px 0px;">Dialog.show({}, { <span class="keyword">confirm</span> : function() {...}, ...생략... });</p>
			<p class="dot">Dialog.show()시 customEvent를 parameter로 설정하여 사용<br/>- Dialog가 Hide되면 이벤트가 삭제됨</p>
	    </div>
	</div>
	<!--// Option 영역 -->
	
	<div id="demo">
		<div class="lm">
			<ul class="lst_type">
			<li>bAutoClose : <span class="keyword">true</span>&nbsp;&nbsp;</li>
			<li class="sub">Dialog 이외의 영역 클릭시 자동으로 Dialog가 닫힘</li>
			<li>bAutoClose : <span class="keyword">false</span>&nbsp;&nbsp;&nbsp;&nbsp;<font style="color:red;font-size:.9em;">(default)</font></li>
			<li class="sub">[확인], [취소], [닫기]버튼 클릭시에만 Dialog 닫힘</li>
			</ul>
		</div>		
	</div>
	
	<!-- Log 영역 -->
    <div class="scroll">
        <button type="button" id="delConsole" class="btn_del">로그모두삭제</button>
        <textarea title="로그" id="txtConsole" class="tarea"></textarea>
    </div>
    <!-- Log 영역 -->
</div>
<!--// Content -->

<!-- ViewSource Template 영역 -->
<div style="display:none;">
	<textarea>
	/*includeCSS*/	
	/*includeCSSEnd*/	
	
	
	<!--includeHtml -->
	<!--includeHtmlEnd -->
	
	
	/*includeScript*/
	var oDialog = new jindo.m.Dialog();
	
	var sTemplate = "<div>...생략...</div>";
	oDialog.setTemplate(sTemplate);
	
	// attach custom event
	oDialog.attach({
		beforeShow : function(e) {...생략...},
		show : function(e) {...생략...},
		beforeHide : function(e) {...생략...},
		hide : function(e) {...생략...}
	});
	
	// attach custom event
	oDialog.show({}, {
		confirm : function(e) {...생략...},
		cancel : function(e) {...생략...},
		close : function(e) {...생략...}
	});
	/*includeScriptEnd*/
	</textarea>
</div>
<!--// ViewSource Template 영역끝 -->

<!-- 사용자 script 파일 시작 -->
<script src="../../../source/jindo.m.Transition.js" charset="utf-8"></script>
<script src="../../../source/effect/jindo.m.Effect.js" charset="utf-8"></script>
<script src="../../../source/effect/jindo.m.SlideEffect.js" charset="utf-8"></script>
<script src="../../../source/effect/jindo.m.PopEffect.js" charset="utf-8"></script>
<script src="../../../source/effect/jindo.m.FlipEffect.js" charset="utf-8"></script>
<script src="../../../source/effect/jindo.m.FadeEffect.js" charset="utf-8"></script>
<script src="../../../source/jindo.m.LayerEffect.js" charset="utf-8"></script>
<script src="../../../source/jindo.m.Dialog.js" charset="utf-8"></script>
<!-- 사용자 script 파일 끝 -->

<!-- Sample 실행 script 코드 -->
<script type="text/javascript">
var aTemplate = [];
aTemplate.push('<div class="u_dsc u_dsc_q" style="background-color:white;border:2px solid #777777;">');
aTemplate.push('<button type="button" class="dialog-close guioHeaderClose"><img src="../im/btn_close.gif" width="18" height="18" alt="닫기"></button>');
aTemplate.push('<h2 class="uc_h"><span class="uc_st_q">customEvent</span> Dailog</h2>');
aTemplate.push('<p class="uc_p">화면 하단의 <span class="uc_st_q">Log영역</span>을 확인해주세요.</p>');
aTemplate.push('<div class="uc_area">');
aTemplate.push('<a href="#" class="u_btn dialog-confirm" onClick="return false;"><span class="uc_ico_ck">확인</span></a> ');
aTemplate.push('<a href="#" class="u_btn dialog-cancel" onClick="return false;">취소</a>');
aTemplate.push('</div>');
aTemplate.push('</div>');
var sTemplate = aTemplate.join("");

var oDialog = new jindo.m.Dialog();
oDialog.attach({
	beforeShow : function(e) {
		addConsole("'" + e.sType + "' 이벤트처리 → 레이어 띄우기(show처리) 직전");
	},
	show : function(e) {
		addConsole("'" + e.sType + "' 이벤트처리 → 레이어 띄우기(show처리) 직후");
	},
	beforeHide : function(e) {
		addConsole("'" + e.sType + "' 이벤트처리 → 레이어 숨기기(hide처리) 직전");
	},
	hide : function(e) {
		addConsole("'" + e.sType + "' 이벤트처리 → 레이어 숨기기(hide처리) 직후");
	}
});
oDialog.setTemplate(sTemplate);

jindo.$Fn(function(we){
	oDialog.show({}, {
		confirm : function(e) {
			addConsole("'" + e.sType + "' 이벤트처리 → [확인]버튼 클릭됨");
		},
		cancel : function(e) {
			addConsole("'" + e.sType + "' 이벤트처리 → [취소]버튼 클릭됨");
		},
		close : function(e) {
			addConsole("'" + e.sType + "' 이벤트처리 → [닫기]버튼 클릭됨");
		}
	});
	we.stopDefault();
}).attach(jindo.$("btn1"), "click");
</script>
<!--// Sample 실행 script 코드 끝-->


<!-- Sample 실행 script 코드 -->
<script type="text/javascript">
var aTemplate = [];
aTemplate.push('<div class="u_dsc {=class1}" style="background-color:white;border:2px solid #777777;">');
aTemplate.push('<h2 class="uc_h">sFoggyColor : <strong class="{=class2}">{=color}</strong><br/>nFoggyOpacity : <strong class="{=class2}">{=opacity}</strong></h2>');
aTemplate.push('<p class="uc_p">sFoggyColor : FoggyLayer의 색상<br/>nFoggyOpacity : FoggyLayer의 투명도 (0~1)</p>');
aTemplate.push('<div class="uc_area">');
aTemplate.push('<a href="#" class="u_btn dialog-confirm" onClick="return false;">확인</a> ');
aTemplate.push('</div>');
aTemplate.push('</div>');
var sTemplate = aTemplate.join("");

var oDialog, oDialog1, oDialog2, oDialog3; 
function show(sType) {
	var htTemplate;
	if(sType == 0) {
		htTemplate = {
			class1 : "u_dsc",
			class2 : "uc_st",
			color : "gray",
			opacity : 0.5
		};
		
		if(!oDialog) { 
			oDialog = new jindo.m.Dialog();
			oDialog.setTemplate(sTemplate);
		}
		oDialog.show(htTemplate);
	} else if(sType == 1) {
		htTemplate = {
			class1 : "u_dsc",
			class2 : "uc_st",
			color : "#3AA6B5",
			opacity : 0.3
		};
		
		if(!oDialog1) { 
			oDialog1 = new jindo.m.Dialog({sFoggyColor : htTemplate.color, nFoggyOpacity : htTemplate.opacity});
			oDialog1.setTemplate(sTemplate);
		}
		oDialog1.show(htTemplate);
	} else if(sType == 2) {
		htTemplate = {
			class1 : "u_dsc_q",
			class2 : "uc_st_q",
			color : "#32a800",
			opacity : 0.7
		};
		
		if(!oDialog2) { 
			oDialog2 = new jindo.m.Dialog({sFoggyColor : htTemplate.color, nFoggyOpacity : htTemplate.opacity});
			oDialog2.setTemplate(sTemplate);
		}
		oDialog2.show(htTemplate);
	} else if(sType == 3) {
		htTemplate = {
			class1 : "u_dsc_n",
			class2 : "uc_st_n",
			color : "#FF6347",
			opacity : 1
		};
		
		if(!oDialog3) { 
			oDialog3 = new jindo.m.Dialog({sFoggyColor : htTemplate.color, nFoggyOpacity : htTemplate.opacity});
			oDialog3.setTemplate(sTemplate);
		}
		oDialog3.show(htTemplate);
	}
}
</script>
<!--// Sample 실행 script 코드 끝-->

